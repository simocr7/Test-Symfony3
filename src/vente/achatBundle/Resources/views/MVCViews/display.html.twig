{% extends '@venteachat/index.html.twig' %}
{%block title %}About product {% endblock %}
{% block body %}
    <div class="container pan">
        <div class="row">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped ">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th colspan="2" style="text-align: center;">Panier<i class="material-icons"></i></th>
                            </tr>
                        </thead>
                        <tbody>  
                            <tr>
                                <td style="padding: 15px;">{{pts.nom}}</td>
                                <td style="padding: 15px;">{{pts.description}}</td>
                                <td style="padding: 15px;">{{pts.prix}}</td>
                                <td><a href="{{path('ajouter',{'id':pts.id} )}}"><button class="btn-primary klic">{{'display.info1' | trans }}</button></a></td>
                                <td><a href="{{path('supprimer',{'id':pts.id} )}}"><button class="btn-primary klic">{{'display.info2' | trans }}</button></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="10" class="text-center">Data retrieved from <a href="#" target="_blank">Laabi|Ecommerce</a>.</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



